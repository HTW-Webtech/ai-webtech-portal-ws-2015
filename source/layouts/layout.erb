<!doctype html>
<html>
  <head>
     <meta charset="utf-8">
     <meta name="viewport" content="width=device-width, initial-scale=1">
      <!-- Always force latest IE rendering engine or request Chrome Frame -->
     <meta http-equiv="X-UA-Compatible" content="IE=edge">
     <base href="<%= current_page_path(current_page) %>" />

     <title><%= page_title(current_page) %></title>

    <%= stylesheet_link_tag 'vendor/prism' %>
    <%= stylesheet_link_tag 'site' %>
     <link rel="shortcut icon" href="/favicon.ico">
     <link rel="apple-touch-icon" href="/icon.png">
     <link rel="manifest" href="/manifest.json">
  </head>

  <body class="<%= page_classes %> <%= current_page_dir(current_page) %>">
    <%= partial 'layouts/navigation', locals: { current_page: current_page } %>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <%= yield %>
        </div>
      </div>
    </div>

    <%= javascript_include_tag 'all' %>
  </body>
</html>
